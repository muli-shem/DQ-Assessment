generator client{
    provider = "prisma-client-js"

}

datasource db{
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum UserRole{
    USER
    ADMIN
}

model User {
    id         String @id @default(uuid())
    email      String @unique
    password   String
    name       String?
    role       UserRole @default(USER)
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt

    @@map("users")
}

model Product {
    id              String @id @default(uuid())
    name            String
    description     String? @db.Text
    price           Float
    category        String
    imageUrl        String?
    stock           Int    @default(0)
    isActive        Boolean @default(true)
    createdAt       DateTime @default(now())
    updatedAt       DateTime @updatedAt
    
    @@index([category])
    @@index([isActive])
    @@map("products")
}